    <div class="container">
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
        {contactCards.map((info) => (
          <Card variant="outlined" hover={true}>
            <div class="text-center">
              <div class="text-4xl mb-4">{info.icono}</div>
              <h3 class="text-xl font-display font-semibold text-primary-dark mb-4">{info.titulo}</h3>
              <div class="space-y-2">
                {info.detalles.map((detalle) => (
                  info.link ? (
                    <a href={info.link} class="block text-text-secondary text-sm hover:text-primary transition-colors" target="_blank" rel="noopener noreferrer">
                      {detalle}
                    </a>
                  ) : (
                    <p class="text-text-secondary text-sm">{detalle}</p>
                  )
                ))}
              </div>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Formulario -->
