---
import BaseLayout from "../layouts/BaseLayout.astro";
import Card from "../components/ui/Card.astro";
import Button from "../components/ui/Button.astro";
import Badge from "../components/ui/Badge.astro";
import CallToAction from "../components/sections/CallToAction.astro";

import {
  siteData,
  getAllServices,
  getHomeBooks,
  formatPrice,
  getBookCover,
  getPurchaseHref,
} from "../utils/data";

// 3 servicios destacados
const serviciosDestacados = getAllServices().slice(0, 3);

// SIEMPRE 3 libros según la regla pedida
const librosDestacados = getHomeBooks(3);

// Ajuste de columnas para centrar si hay 1 o 2
const gridColsClass =
  librosDestacados.length === 1
    ? "grid-cols-1 justify-center"
    : librosDestacados.length === 2
    ? "grid-cols-2 justify-center"
    : "md:grid-cols-2 lg:grid-cols-3";
---

<BaseLayout title={`${siteData.name} - ${siteData.tagline}`}>
  <!-- Hero Section -->
  <section class="py-16 lg:py-24 bg-accent/5 text-primary-dark">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="text-center lg:text-left">
          <div class="mb-8">
            <img
              src="/images/logos/logo.svg"
              alt={`Logotipo ${siteData.shortName}`}
              class="h-24 w-auto mx-auto lg:mx-0 mb-6"
              loading="eager"
              decoding="async"
            />
            <h1 class="text-5xl md:text-6xl font-display font-bold mb-2">
              <span class="text-gold">{siteData.shortName.toUpperCase()}</span>
            </h1>
            <p class="text-xl text-gold tracking-wider uppercase">{siteData.subtitle}</p>
          </div>

          <h2 class="text-3xl md:text-4xl lg:text-5xl font-display font-bold mb-8 leading-tight text-primary-dark">
            {siteData.tagline}
          </h2>

          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <Button
              variant="primary"
              size="lg"
              class="bg-accent hover:bg-accent-hover text-white"
              href="/enviar-manuscrito"
            >
              {siteData.cta.primary}
            </Button>
            <Button variant="primary" size="lg" class="bg-primary hover:bg-primary-dark text-white" href="/catalogo">
              {siteData.cta.secondary}
            </Button>
          </div>
        </div>

        <div class="flex justify-center lg:justify-end">
          <img
            src="/images/hero/book-open.svg"
            alt="Ilustración libro abierto"
            class="max-w-xs md:max-w-md lg:max-w-lg h-auto"
            loading="lazy"
            decoding="async"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-16 lg:py-24 bg-bg-primary">
    <div class="container text-center">
      <h2 class="text-4xl md:text-5xl font-display font-bold text-gold mb-8">
        Descubre la excelencia editorial de {siteData.shortName}
      </h2>
      <div class="max-w-4xl mx-auto">
        <p class="text-xl md:text-2xl text-text-primary font-medium mb-6">
          Somos una editorial dedicada a transformar manuscritos en obras publicadas de calidad.
        </p>
        <p class="text-lg text-text-secondary">
          Desde la edición hasta el diseño, ofrecemos un servicio integral
        </p>
      </div>
    </div>
  </section>

  <!-- Services Section (data-driven) -->
  <section class="py-16 lg:py-24 bg-bg-secondary">
    <div class="container">
      <h2 class="text-4xl md:text-5xl font-display font-bold text-primary-dark text-center mb-16">
        Nuestros Servicios
      </h2>

      <div class="grid md:grid-cols-3 gap-12 max-w-6xl mx-auto">
        {serviciosDestacados.map((s) => (
          <div class="text-center">
            <div class="w-20 h-20 bg-accent/10 rounded-xl flex items-center justify-center mx-auto mb-6">
              <span class="text-accent text-2xl">{s.icono ?? "📘"}</span>
            </div>
            <h3 class="text-2xl font-display font-bold text-primary-dark mb-4">{s.titulo}</h3>
            <p class="text-text-secondary leading-relaxed">{s.descripcion}</p>
          </div>
        ))}

        <div class="mt-10 md:col-span-3 flex justify-center">
          <Button variant="primary" size="lg" class="bg-primary hover:bg-primary-dark text-white" href="/servicios">
            VER TODOS LOS SERVICIOS
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Catalog Section (mismas tarjetas que /catalogo) -->
  <section class="py-16 lg:py-24 bg-bg-primary">
    <div class="container">
      <h2 class="text-4xl md:text-5xl font-display font-bold text-gold text-center mb-16">
        Catálogo de Libros
      </h2>

      <div class={`grid gap-8 ${gridColsClass}`}>
        {librosDestacados.map((libro) => (
          <Card variant="elevated" hover={true} class="overflow-hidden w-full max-w-[22rem] mx-auto">
            <!-- Portada -->
            <figure class="aspect-book rounded-lg overflow-hidden bg-gray-100 mb-4">
              <img
                src={getBookCover(libro)}
                alt={`Portada: ${libro.titulo}`}
                class="w-full h-full object-cover"
                loading="lazy"
                decoding="async"
                onerror="this.onerror=null;this.src='/images/books/placeholder.svg';"
              />
            </figure>

            <div class="space-y-3">
              <div class="flex items-center justify-between mb-2">
                <Badge variant="secondary" size="sm">{libro.genero}</Badge>
                <span class="text-text-muted text-xs">{libro.año}</span>
              </div>

              <h3 class="text-lg font-display font-semibold text-primary-dark line-clamp-2">
                {libro.titulo}
              </h3>
              <p class="text-text-muted text-sm">por {libro.autor}</p>

              {libro.sinopsis && (
                <p class="text-text-secondary text-sm line-clamp-2 whitespace-pre-line">
                  {libro.sinopsis}
                </p>
              )}

              <div class="flex items-center justify-between pt-3 border-t border-gray-100">
                <span class="text-lg font-semibold text-gold">{formatPrice(libro.precio)}</span>
                <div class="space-x-2">
                  <Button variant="ghost" size="sm" href={`/catalogo/${libro.id}`}>Ver</Button>
                  <Button
                    variant="primary"
                    size="sm"
                    href={getPurchaseHref(libro)}
                    target={getPurchaseHref(libro).startsWith('http') ? '_blank' : undefined}
                  >
                    Comprar
                  </Button>
                </div>
              </div>
            </div>
          </Card>
        ))}
      </div>

      <div class="text-center mt-12">
        <Button variant="primary" size="lg" class="bg-primary hover:bg-primary-dark text-white" href="/catalogo">
          VER TODO EL CATÁLOGO
        </Button>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <CallToAction
    title="¿Tienes un manuscrito que merece ser publicado?"
    description="Convierte tu obra en un tesoro literario con nuestro acompañamiento editorial profesional."
    primaryButton={{
      text: "Comenzar tu Proyecto",
      href: "/enviar-manuscrito",
      variant: "gold"
    }}
    secondaryButton={{
      text: "Conocer Más",
      href: "/contacto",
      variant: "ghost"
    }}
  />
</BaseLayout>
