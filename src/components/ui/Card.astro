---
export interface Props {
  variant?: 'default' | 'elevated' | 'outlined' | 'glass';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  class?: string;
  hover?: boolean;
}

const {
  variant = 'default',
  padding = 'md',
  class: className = '',
  hover = true,
  ...rest
} = Astro.props;

const variantClasses = {
  default: 'bg-bg-white shadow-md',
  elevated: 'bg-bg-white shadow-lg',
  outlined: 'bg-bg-white border border-gray-200',
  glass: 'bg-white/80 backdrop-blur-sm border border-white/20'
};

const paddingClasses = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8'
};

const hoverClasses = hover ? 'hover:shadow-lg transition-shadow duration-300' : '';

const classes = `rounded-lg ${variantClasses[variant]} ${paddingClasses[padding]} ${hoverClasses} ${className}`;
---

<div class={classes} {...rest}>
  <slot />
</div>